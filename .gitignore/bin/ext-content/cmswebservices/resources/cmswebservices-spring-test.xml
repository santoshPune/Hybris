	</bean>

	<bean id="simpleResponsiveBannerComponentModelMother" class="de.hybris.platform.cmswebservices.util.models.SimpleResponsiveBannerComponentModelMother" parent="abstractModelMother">
		<property name="simpleResponsiveBannerComponentDao" ref="simpleResponsiveBannerComponentDao" />
